  <div class="container mt-4 mb-4">
    <div class="card mx-auto col-lg-8 shadow p-3 bg-white">
      <h2>New Dream</h2>
        <%= form_with model: @dream_list, method: :post, local: true do |form| %>
          <div class="ml-3 mt-3">
            <%= render "dream_lists/form", form: form %>
            <div class="mt-3 text-center">
              <%= form.submit "投稿" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
