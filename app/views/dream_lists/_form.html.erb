<div class="row mt-3">
  <div class="col-md-4">
    <%= form.label :image, "画像 :", class: "font-weight-bold" %>
  </div>
  <div class="col-4">
    <%= form.file_field :image, accept: "image/*" %>
  </div>
</div>
<div class="row mt-3">
  <div class="col-md-4">
    <%= form.label :dream, "夢 :", class: "font-weight-bold" %>
  </div>
  <div class="col-4">
    <%= form.text_field :dream %>
  </div>
</div>
<div class="row mt-3">
  <div class="col-md-4">
    <%= form.label :period, "達成日 :", class: "font-weight-bold" %>
  </div>
  <div class="col-4">
    <%= form.text_field :period %>
  </div>
</div>
<div class="row mt-3">
  <div class="col-md-4">
    <%= form.label :detail, "フリー(意気込み) :", class: "font-weight-bold" %>
  </div>
  <div class="col-4">
    <%= form.text_area :detail, placeholder: "" %>
  </div>
</div>
<div class="row mt-3">
  <div class="col-md-4">
    <%= form.label :category, "カテゴリー :", class: "font-weight-bold" %>
  </div>
  <div class="col-4">
    <%= form.text_field :category, placeholder: "" %>
  </div>
</div>