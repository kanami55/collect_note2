<div class="container mt-4 mb-4">
  <div class="text-right">
    <%= link_to "+ Dream", new_dream_list_path, class: "btn btn-secondary btn-sm" %>
  </div>
  <h2 class="text-white" >Many Dreams</h2>
    <div class="row">
      <%= render "dream_lists/index", dream_lists: @dream_lists %>
      <%= render "dream_lists/category", dream_lists: @dream_lists %>
    </div>
    <div class="mx-auto">
      <%= paginate @dream_lists %>
    </div>

    <!--モーダル実装-->
    <!--バック黒い部分-->
    <div id="mask" class="hidden"></div>
    <!--モーダル部分-->
    <div id="modal" class="hidden">
      <%= render "dream_lists/edit", dream_list: @dream_list %>
    </div>
</div>
