<div class="container">
  <div class="text-right">
    <%= link_to "+ New", new_not_to_do_list_path, class: "btn btn-sm btn-secondary"%>
  </div>
  <h2 class="text-white">Not To Do List</h2>
<table class="table text-white text-center">
  <thead>
    <tr>
      <th>仕事</th>
      <th>生活</th>
      <th>人間関係</th>
    </tr>
  </thead>
  <tbody>
    <% @not_to_do_lists.each do |not_to_do_list| %>
    <tr>
      <td class="text-white">
        <%= not_to_do_list.work %>
        <%= link_to edit_not_to_do_list_path(not_to_do_list), remote: true do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </td>
      <td class="text-white">
        <%= not_to_do_list.life %>
        <%= link_to edit_not_to_do_list_path(not_to_do_list), remote: true do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </td>
      <td class="text-white">
        <%= not_to_do_list.relationships %>
        <%= link_to edit_not_to_do_list_path(not_to_do_list), remote: true do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>