<div class="container mt-4 mb-4">
  <div class="card mx-auto col-lg-8 shadow p-3 bg-white">
    <h2>Log in</h2>
      <%= form_with scope: :session, local: true do |form| %>
        <div class="ml-3 mt-3">
          <div class="row mt-3">
            <div class="col-md-4">
              <%= form.label "メールアドレス:", class: "form_label" %>
            </div>
            <div class="col-4">
              <%= form.text_field :email, class: "form-control-sm" %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-4">
              <%= form.label "パスワード:", class: "form_label" %>
            </div>
            <div class="col-4">
              <%= form.text_field :password, class: "form-control-sm" %>
            </div>
          </div>
          <div class="mt-3 text-center btn-slim">
            <%= button_tag :type => "submit", :class =>"btn-sm btn-default" do %>
              <i class="fas fa-caret-right"></i>Log in
            <% end %>
          </div>
        </div>
      <% end %>
  </div>
</div>
