<div class="container mt-4 mb-4">
  <div class="card mx-auto col-lg-8 shadow p-3 bg-white">
    <h2>ログイン</h2>
      <%= form_with model: @user, method: :patch, local: true do |form| %>
        <div class="ml-3 mt-3">
          <div class="row mt-3">
            <div class="col-md-4">
              <%= form.label "メールアドレス:" %>
            </div>
            <div class="col-4">
              <%= form.text_field :email %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-4">
              <%= form.label "パスワード:" %>
            </div>
            <div class="col-4">
              <%= form.text_field :password %>
            </div>
          </div>
          <div class="mt-3 text-center">
            <%= form.submit "ログイン" %>
          </div>
        </div>
      <% end %>
  </div>
</div>
